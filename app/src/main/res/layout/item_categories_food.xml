<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_width="335dp"
    android:layout_height="170dp"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgCateFood"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_margin="10dp"
        android:src="@drawable/img_food1"
        android:scaleType="fitCenter"
        android:layout_gravity="start"
        />

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:orientation="vertical">

        <TextView
            android:textStyle="bold"
            android:id="@+id/tvNameCateFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="Salmon Pasta with a Creamy Garlic Sauce"
            android:textColor="#000000"
            android:textSize="14dp" />

        <TextView
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:id="@+id/tvPriceCateFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S$1800.00"
            android:textColor="#A80014"
            android:textSize="15dp" />
        <TextView
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:id="@+id/tvDetailCateFood"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:text="S$1800.00"
            android:textColor="#000000"
            android:textSize="12dp" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="3dp"
                android:id="@+id/imgLogoCateFood"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/img_icon_logo" />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNameCateFoodRes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="The Girlls Sai Gon"
                    android:textColor="#000000"
                    android:textSize="13dp">

                </TextView>

                <TextView
                    android:id="@+id/tvCusecuisCateFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Barbecure &amp; bar"
                    android:textColor="#4a4a4a"
                    android:textSize="12dp">

                </TextView>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    <Button
        android:id="@+id/btAddCateFood"
        android:textSize="16dp"
        android:text="+"
        android:textColor="#ffffff"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="0dp"
        android:layout_marginTop="43dp"
        android:background="#A80014" />
</LinearLayout>